<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_LEFT" spacing="12.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.awords.textkmpanalyzer.TextAnalyzerController">
  <padding>
    <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
  </padding>

  <!-- 标题 -->
  <Label text="Text KMP Analyzer" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

  <!-- 关键词输入 -->
  <HBox spacing="8.0">
    <Label text="关键词:" />
    <TextField fx:id="keywordField" promptText="请输入要搜索的关键词" HBox.hgrow="ALWAYS" />
  </HBox>

  <!-- 文本输入区域 -->
  <TextArea fx:id="inputTextArea" promptText="在此粘贴或输入要分析的文本" prefRowCount="12" wrapText="true" />

  <!-- 操作按钮 -->
  <HBox spacing="10.0">
    <Button text="保存" onAction="#onSaveButtonClick" />
    <Button text="搜索" onAction="#onSearchButtonClick" />
  </HBox>

  <!-- 结果显示 -->
  <Label fx:id="resultLabel" text="结果将在此显示" />
</VBox>
